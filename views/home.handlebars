<!doctype html>
<html>

<head>
	<title>Database Interactions and UI</title>
	<!-- <link rel="stylesheet" href="style.css"> -->

	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

</head>

<body>
	<div class="container">

		<div class="jumbotron">
			<h1 class="display-4">The Workouts</h1>
		</div>

		<hr class="my-4">
		<h3>Enter New Workout</h3>
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<tr class="table-info">
					<th>Name</th>
					<th>Reps</th>
					<th>Weight</th>
					<th>Date</th>
					<th>Lbs</th>
					<th>Kgs</th>
					<th>Add</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<input id="newName" value="">
					</td>
					<td>
						<input id="newReps" value="">
					</td>
					<td>
						<input id="newWeight" value="">
					</td>
					<td>
						<input id="newDate" class="form-control" type="date" value="">
					</td>
					<td>
						<input id="newLbs" type="radio" name="newLbs" value="1">
					</td>
					<td>
						<input id="newKgs" type="radio" name="newLbs" value="1">
					</td>
					<td>
						<button type="button" id="addButton" class="btn btn-primary">Add</button>
					</td>
				</tr>
			</tbody>

		</table>
		<hr class="my-4">
		<h3>Finished Workouts</h3>
		<table id="finishedWorkouts" class="table table-striped table-hover table-bordered">
			<thead id="finishedHead">
			</thead>
			<tbody id="finishedBody">
			</tbody>
		</table>
	</div>
	<script src="script.js"></script>
	<!-- jQuery first, then Tether, then Bootstrap JS. -->
	<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

</body>

</html>
